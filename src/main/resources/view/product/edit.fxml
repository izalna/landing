<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.controller.product.ProductFormController"
      spacing="10" alignment="CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label fx:id="formTitle" text="Create Product" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextField fx:id="titleField" promptText="Title"/>
    <TextField fx:id="priceField" promptText="Price"/>
    <TextArea fx:id="descField" promptText="Description" prefRowCount="3"/>
    <TextField fx:id="categoryField" promptText="Category"/>
    <TextField fx:id="imageField" promptText="Image URL"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Save" onAction="#onSave"/>
        <Button text="Cancel" onAction="#onCancel"/>
    </HBox>
</VBox>