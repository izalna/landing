<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.controller.HomeController" spacing="0">

  <!-- Navbar -->
  <HBox spacing="40" alignment="CENTER" style="-fx-padding: 20px; -fx-background-color: rgba(255,255,255,0.8);">
    <Label text="WOMEN" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
    <Label text="MEN" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
    <Label text="KIDS" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
    <Label text="BABY" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
  </HBox>

  <!-- Landing Section -->
  <StackPane fx:id="landingSection">
    <!-- Background Image -->
    <AnchorPane>
      <ImageView fx:id="backgroundImage" preserveRatio="false" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0" />
    </AnchorPane>

    <!-- Text on top -->
    <VBox alignment="CENTER" spacing="10">
      <Label text="Linen Collection: Spring's Lightest Layers" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: black;" />
      <Label text="Airy and breathable, wear after wear." style="-fx-font-size: 18px; -fx-text-fill: black;" />
    </VBox>
  </StackPane>

</VBox>
